{
  "name": "@polyfea/core",
  "version": "0.0.1",
  "description": "Polyfea Core Library",
  "main": "dist/components/index.js",
  "module": "dist/components/index.js",
  "es2015": "dist/components/index.js",
  "es2017": "dist/components/index.js",
  "types": "./dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/polyfea/core.git"
  },
  "keywords": [
    "polyfea",
    "webcomponents",
    "custom-elements",
    "microfrontend"
  ],
  "files": [
    "dist/"
  ],
  "scripts": {
    "build.stencil": "stencil build --docs",
    "build.boot": "vite build",
    "build": "run-s build.stencil build.boot typedoc",
    "start": "stencil build --dev --watch --serve",
    "test.stencil": "stencil test --spec --e2e",
    "test.core": "vitest --run",
    "test": "run-s test.stencil test.core",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "typedoc": "npx typedoc --plugin typedoc-plugin-markdown src/core/index.ts"
  },
  "dependencies": {
    "@polyfea/browser-api": "^1.0.3",
    "@stencil/core": "^4.7.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/node": "^20.0.0",
    "@vitest/browser": "^1.1.3",
    "babel-jest": "^29.7.0",
    "fetch-mock": "^9.11.0",
    "happy-dom": "^12.10.3",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "puppeteer": "21.1.1",
    "typedoc": "^0.25.6",
    "typedoc-plugin-markdown": "^3.17.1",
    "vite": "^5.0.10",
    "vitest": "^1.1.1",
    "workbox-build": "^4.3.1"
  },
  "license": "Apache-2.0"
}
